<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="20dp"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canvas Width : "
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/canvasWidth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Set canvas width"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColorHint="@color/ui_primary"
        android:inputType="phone"
        android:autofillHints="phone"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canvas Height : "
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_marginTop="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/canvasHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Set canvas height"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColorHint="@color/ui_primary"
        android:inputType="phone"
        android:autofillHints="phone"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="30dp"
        >
        <Button
            android:id="@+id/enter_canvasProperties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter"
            android:backgroundTint="@color/ui_primary"
            android:layout_marginEnd="5dp"
            />
        <Button
            android:id="@+id/cancel_canvasProperties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_marginStart="5dp"
            android:backgroundTint="#756A6A"
            />
    </LinearLayout>


</LinearLayout>